# An editor-agnostic way of setting
# editor settings.
#
# https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
max_line_length = 80

[*.vim]
indent_size = 4

[*.lua]
indent_size = 2
